<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    tools:layout_editor_absoluteY="81dp">


    <Button
        android:id="@+id/button_love"
        android:layout_width="120dp"
        android:layout_height="105dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/button_joy"
        android:text="@string/love"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintWidth_percent="0.5"
        tools:layout_editor_absoluteY="110dp" />

    <Button
        android:id="@+id/button_joy"
        android:layout_width="120dp"
        android:layout_height="106dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="164dp"
        android:text="@string/joy"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintWidth_percent="0.5"
        tools:layout_editor_absoluteX="192dp"
        tools:layout_editor_absoluteY="184dp" />

    <Button
        android:id="@+id/button_surprise"
        android:layout_width="130dp"
        android:layout_height="106dp"
        android:layout_alignTop="@+id/button_love"
        android:layout_centerHorizontal="true"
        android:text="@string/surprise"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintWidth_percent="0.5"
        tools:layout_editor_absoluteX="192dp"
        tools:layout_editor_absoluteY="110dp" />

    <Button
        android:id="@+id/button_anger"
        android:layout_width="120dp"
        android:layout_height="105dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/button_fear"
        android:text="@string/anger"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintWidth_percent="0.5"
        tools:layout_editor_absoluteY="184dp" />

    <Button
        android:id="@+id/button_fear"
        android:layout_width="130dp"
        android:layout_height="105dp"
        android:layout_below="@+id/button_love"
        android:layout_centerHorizontal="true"
        android:text="@string/fear"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintWidth_percent="0.5"
        tools:layout_editor_absoluteX="192dp"
        tools:layout_editor_absoluteY="261dp" />

    <Button
        android:id="@+id/button_sadness"
        android:layout_width="120dp"
        android:layout_height="105dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button_love"
        android:text="@string/sadness"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintWidth_percent="0.5"
        tools:layout_editor_absoluteY="261dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:text="@string/what_is_your_emotion"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="27dp" />

    <Button
        android:id="@+id/button_stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button_anger"
        android:text="@string/show_stats" />

</RelativeLayout>
